/* packageSearch/pages/work/work.wxss */

.work {
  position: relative;
  top: 130rpx;
}

.work_title {
  width: 95%;
  height: 100rpx;
  margin: 5rpx auto;
  border-radius: 20rpx;
  background-color: #fafafa;
  color: black;
  font-size: 16px;
  font-weight: bold;
  line-height: 100rpx;
  text-align: center;
}

.works_img {
  width: 90%;
  height: 500rpx;
  margin: 2rpx auto;
  position: relative;
  left: 5%;
}

.charm {
  width: 100%;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  align-content: center;
  justify-content: space-around;
  font-size: 14px;
}

.follow {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}

.author_logo {
  position: relative;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.user_logo {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.popularity {
  width: 100%;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  align-content: center;
  justify-content: space-around;
  font-size: 14px;
}

.comment {
  width: 100%;
  background-color: #fafafa;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1), 0 1px rgba(0, 0, 0, 0.1);
  font-size: 14px;
}

.comment_user {
  width: 100%;
  margin-left: 10rpx;
  line-height: 50rpx;
}

.comment_text {
  width: 100%;
  text-align: center;
}

.comment_suport {
  float: right;
}
