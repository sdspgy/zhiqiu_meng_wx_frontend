/* packageSearch/pages/search/search.wxss */

.search {
  position: relative;
  top: 140rpx;
}

.works {
  float: left;
  width: 45%;
  height: 800rpx;
  margin: 10rpx 0rpx 10rpx 20rpx;
}

.work {
  width: 100%;
  height: 150rpx;
  margin-top: 25rpx;
  background-color: #fafafa;
  border-bottom: 1px solid #fbf;
}

.users {
  float: right;
  width: 45%;
  height: 600rpx;
  margin: 10rpx 20rpx 10rpx 0rpx;
  /* 弹性布局 */
  display: flex;
  /* 横行排列 */
  flex-direction: row;
  /* 换行 */
  flex-wrap: wrap;
  /* 当前行的侧轴（纵轴）方向上的对齐方式 */
  align-items: flex-start;
  /* 间隔 */
  justify-content: space-around;
}

.imgWork {
  width: 100%;
  height: 80%;
  overflow: hidden;
}

.imgUser {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user {
  width: 45%;
  height: 125rpx;
  text-align: center;
}

.swiper {
  width: 100%;
  height: 20%;
  background-color: #fafafa;
  font-size: 10px;
  text-align: center;
  position: relative;
  bottom: 5%;
}

.userName {
  font-size: 10px;
  color: #ff8247;
  width: 100%;
  text-align: center;
}
