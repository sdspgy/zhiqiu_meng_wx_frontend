/* packageManage/pages/work/work.wxss */

.main {
  position: relative;
  top: 200rpx;
  width: 100%;
  height: 1000rpx;
}

#scroll {
  height: 1000rpx;
  width: 100%;
}

.main_scroll {
  /* 弹性布局 */
  display: flex;
  /* 横行排列 */
  flex-direction: row;
  /* 换行 */
  flex-wrap: wrap;
  /* 当前行的侧轴（纵轴）方向上的对齐方式 */
  align-items: flex-start;
  /* 间隔 */
  justify-content: space-around;
}

.works {
  width: 30%;
  height: 200rpx;
  background-color: black;
  margin: 12rpx 12rpx 12rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1), 0 1px rgba(0, 0, 0, 0.1);
  opacity: 0.8;
}

.work_img {
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.work_load {
  position: relative;
  left: 45%;
}
