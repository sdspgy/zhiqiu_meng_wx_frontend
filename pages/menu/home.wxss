.logo {
  width: 80rpx;
  height: 80rpx;
  margin-top: 18rpx;
  margin-left: 10rpx;
  border-radius: 50%;
}

.title {
  margin-top: 20rpx;
  font-size: 14px;
  font-weight: bold;
  line-height: 78rpx;
}

.seacher {
  display: flex;
  width: 85%;
  height: 60rpx;
  margin: 0 auto;
  background-color: #e8e8e8;
  color: #d1d1d1;
  font-size: 13px;
  border-radius: 25rpx;
  line-height: 60rpx;
}

van-icon {
  margin: 6rpx 120rpx 0 15rpx;
}

.main {
  position: absolute;
  top: 18%;
  width: 100%;
  /* 弹性布局 */
  display: flex;
  /* 横行排列 */
  flex-direction: row;
  /* 换行 */
  flex-wrap: wrap;
  /* 间隔 */
  justify-content: space-around;
}

.works {
  width: 47%;
  height: 500rpx;
  background-color: #fafafa;
  margin: 12rpx 2rpx 2rpx 2rpx;
  border-radius: 20rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1), 0 1px rgba(0, 0, 0, 0.1);
}

.work_img {
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  height: 71%;
}
